<% if var(:results).length == 0 %>
  <%= var(:item) %> returns no results from the New York Times.
<% else %>
  <% var(:results).each_with_index do |res, i| %>
      <% next if i > 2 %>
      [<%= res.date %>] <%= res.title %>, written <%= res.byline %> - <%= res.url %>
      <% i = i + 1 %>
  <% end %>
<% end %>